import pygame, Gui , Spieler , Shop , NPCs , Gegnerspawn , Event , Spielfeld , Taste , leaderboard , speicher



class Steuerung(){
    
    
    clock = pygame.time.Clock()
    Spieler_1 = Spieler()
    Gui_1 = Gui()
    Shop_1 = Shop()
    NPCs_1 = NPCs()
