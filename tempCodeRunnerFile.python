import pygame
import sys

# Initialisierung von Pygame
pygame.init()

# Fenstergröße und -titel
window_size = (800, 600)
window_title = "Eingabeformular"

# Farben
white = (255, 255, 255)
black = (0, 0, 0)
gray = (200, 200, 200)
highlight_gray = (150, 150, 150)

# Schriftart
font = pygame.font.Font(None, 32)

# Erstellen des Fensters
window = pygame.display.set_mode(window_size)
pygame.display.set_caption(window_title)

# Eingabefelder
input_rect1 = pygame.Rect(300, 200, 200, 40)
input_rect2 = pygame.Rect(300, 300, 200, 40)
active_input = None

# Button
button_rect = pygame.Rect(350, 400, 100, 40)
button_text = font.render("Enter", True, black)
button_color = gray

# Text für die Eingabefelder
text1 = ""
text2 = ""

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()
        elif event.type == pygame.MOUSEBUTTONDOWN:
            if input_rect1.collidepoint(event.pos):
                active_input = input_rect1
            elif input_rect2.collidepoint(event.pos):
                active_input = input_rect2
            elif button_rect.collidepoint(event.pos):
                # Hier kannst du den Code hinzufügen, um den Benutzer auf eine andere Seite weiterzuleiten
                print("Weiterleitung auf andere Seite mit den Namen:", text1, text2)
        elif event.type == pygame.MOUSEMOTION:
            if button_rect.collidepoint(event.pos):
                button_color = highlight_gray
            else:
                button_color = gray
        elif event.type == pygame.KEYDOWN:
            if active_input:
                if event.key == pygame.K_BACKSPACE:
                    if active_input == input_rect1:
                        text1 = text1[:-1]
                    elif active_input == input_rect2:
                        text2 = text2[:-1]
                else:
                    if active_input == input_rect1:
                        text1 += event.unicode
                    elif active_input == input_rect2:
                        text2 += event.unicode

    # Hintergrund löschen
    window.fill(white)

    # Eingabefelder anzeigen
    pygame.draw.rect(window, black, input_rect1, 2)
    pygame.draw.rect(window, black, input_rect2, 2)

    # Button anzeigen
    pygame.draw.rect(window, button_color, button_rect)
    window.blit(button_text, (button_rect.x + 20, button_rect.y + 10))

    # Text für die Eingabefelder anzeigen
    text_surface1 = font.render(text1, True, black)
    text_surface2 = font.render(text2, True, black)
    window.blit(text_surface1, (input_rect1.x + 5, input_rect1.y + 5))
    window.blit(text_surface2, (input_rect2.x + 5, input_rect2.y + 5))

    # Aktualisierung des Fensters
    pygame.display.flip()
